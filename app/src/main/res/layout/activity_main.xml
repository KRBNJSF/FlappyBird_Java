<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <cz.reindl.game.view.View
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <Button
        android:id="@+id/reviveButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_revive_button"
        android:contentDescription="Revive"
        android:fontFamily="@font/pixel_font"
        android:text="ðŸ’¸50ðŸ’¸"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/boostButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/coinImg"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_boost_button"
        android:text="0"
        android:textAlignment="center"
        android:textSize="10sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/buyBoostButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/coinImg"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/boostButton"
        android:background="@drawable/ic_plus_button"
        android:visibility="visible" />

    <Button
        android:id="@+id/duckButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/grass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/duck"
        android:visibility="visible" />

    <TextView
        android:id="@+id/powerUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Power up"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/coinGetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boostButton"
        android:layout_centerHorizontal="true"
        android:text="+1"
        android:textColor="@color/neonYellow"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <Button
        android:id="@+id/skipReviveButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/reviveButton"
        android:layout_marginTop="-20dp"
        android:layout_toEndOf="@id/reviveButton"
        android:background="@drawable/ic_cross_button"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/grass"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grass"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/coinImg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/coin"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/musicStopButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/highScore"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_music_play_button"
        android:contentDescription="Music stop" />


    <TextView
        android:id="@+id/coinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coinImg"
        android:layout_alignStart="@id/coinImg"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-16dp"
        android:fontFamily="@font/pixel_font"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/devButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_settings_button"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/buttonStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/devButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/ic_pause_button"
        android:visibility="invisible"
        tools:ignore="ContentDescription,NotSibling" />

    <Button
        android:id="@+id/shopButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/devButton"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_shop_button"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Score: 0"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/highScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/settingButton"
        android:text="High score: 0"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/devButton"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="0dp"
        android:background="@color/SkyBlue"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/shopLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/buttonSkin1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/devButton"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/bird_h"
            android:contentDescription="Default skin"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NotSibling" />

        <ImageButton
            android:id="@+id/buttonSkin3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/default_bird"
            android:contentDescription="Default skin"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NotSibling" />

        <ImageButton
            android:id="@+id/buttonSkin2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/devButton"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/legendary_skinup"
            android:contentDescription="Legendary skin"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="NotSibling" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/buttonRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gameOverText"
            android:layout_centerInParent="true"
            android:layout_marginTop="60sp"
            android:alpha="0.8"
            android:background="@android:color/transparent"
            android:fontFamily="@font/pixel_font"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Restart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonHardCore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dailyRewardButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:alpha="0.9"
            android:background="@color/black"
            android:fontFamily="@font/pixel_font"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="HardCore"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/dailyRewardButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/devButton"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="23dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="invisible"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/gameOverText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pixel_font"
            android:text="Game Over"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/gameOverText"
            android:layout_alignTop="@id/gameOverText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:fontFamily="@font/pixel_font"
            android:text="Last score: 0"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:visibility="invisible" />

    </RelativeLayout>


</RelativeLayout>